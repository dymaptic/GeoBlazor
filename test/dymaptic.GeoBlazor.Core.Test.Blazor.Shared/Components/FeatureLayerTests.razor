                                  ObjectIdField="OBJECTID">
                        <Field Name="Field1"   Type="FieldType.Long"    />
                        <Field Name="Field2"   Type="FieldType.Date"    />
                        <Field Name="Field3"   Type="FieldType.String"  />
                        <Field Name="OBJECTID" Type="FieldType.Integer" />
                    </FeatureLayer>
                </Map>
            </MapView>);

        await WaitForMapToRender();
        await WaitForLayerToRender<FeatureLayer>();
        await AssertJavaScript("assertLayerExists", args: "feature");

        await layer!.SetOutFields(["Field1", "OBJECTID", "Field2"]);

        IReadOnlyList<string>? outFields = await layer.GetOutFields();
        CollectionAssert.AreEquivalent(new[] { "Field1", "OBJECTID", "Field2" }, outFields?.ToArray());

        await AssertJavaScript(
            "assertObjectHasPropertyWithValue",
            args: [layer.Id, "outFields", new[] { "Field1", "Field2", "OBJECTID" }]);

        await layer.AddToOutFields("Field3");
        outFields = await layer.GetOutFields();
        CollectionAssert.AreEquivalent(new[] { "Field1", "OBJECTID", "Field2", "Field3" }, outFields?.ToArray());

        await layer.RemoveFromOutFields("Field3");
        outFields = await layer.GetOutFields();
        CollectionAssert.AreEquivalent(new[] { "Field1", "OBJECTID", "Field2" }, outFields?.ToArray());

        await layer.SetOrderBy([new OrderByInfo(field: "OBJECTID", order: SortOrder.Ascending)]);
        IReadOnlyList<OrderByInfo>? orderBy = await layer.GetOrderBy();
        Assert.IsTrue(orderBy != null &&
                      orderBy.Any(o => o is { Field: "OBJECTID", Order: SortOrder.Ascending }));
    }

