@inherits TestRunnerBase

@{
    base.BuildRenderTree(__builder);
}

@code {

    [TestMethod]
    public async Task TestCanRenderGeoRSSLayer(Action renderHandler)
    {
        GeoRSSLayer? geoRSSLayer = null;

        RefreshEvent? refreshResult = null;
        void OnRefresh(RefreshEvent result)
        {
            refreshResult = result;
        }
        AddMapRenderFragment(
            @<MapView class="map-view" OnViewRendered="renderHandler">
                <Map>
                    <Basemap>
                        <BasemapStyle Name="BasemapStyleName.ArcgisTopographic" />
                    </Basemap>
                    <GeoRSSLayer 
                        Url="@("https://arcgis.github.io/arcgis-samples-javascript/sample-data/layers-georss/sample-georss.xml")"
                        Title="@("illo debitis commodi")"
                        Opacity="@(0.9485)"
                        Visible="@(true)"
                        ListMode="@(ListMode.Hide)"
                        BlendMode="@(BlendMode.DestinationOver)"
                        Effect="@(new Effect("inventore",
                            10209757.6318))"
                        FullExtent="@(new Extent(132.6189,
                                38.1211,
                                -80.0657,
                                84.5380,
                                565.9717,
                                713.5407,
                                83.4076,
                                15.0946,
                            new SpatialReference(4,
                                    "et",
                                    "provident",
                                    "officiis"),
                                true,
                                true))"
                        LegendEnabled="@(true)"
                        MaxScale="@(27101556.3301)"
                        MinScale="@(28230.3030)"
                        PersistenceEnabled="@(true)"
                        RefreshInterval="@(940.3510)"
                        OnRefresh="OnRefresh">
                        <TimeExtent 
                            Start="@(new DateTime(2007, 2, 7, 14, 30, 35))"
                            End="@(new DateTime(2013, 6, 14, 4, 55, 58))">
                        </TimeExtent>
                        <SimpleFillSymbol 
                            Outline="@(new Outline(new MapColor(181, 219, 208),
                                new Dimension(839.9349),
                                SimpleLineSymbolStyle.ShortDashDot,
                                Cap.Round,
                                Join.Miter,
                                new LineSymbolMarker(new MapColor(77, 253, 86),
                                    LinePlacement.End,
                                    LineSymbolMarkerStyle.Square),
                                291.3897))"
                            Color="@(new MapColor(35, 248, 31))"
                            Style="@(SimpleFillSymbolStyle.BackwardDiagonal)">
                        </SimpleFillSymbol>
                        <SimpleMarkerSymbol 
                            Angle="@(352.6031)"
                            Color="@(new MapColor(164, 247, 107))"
                            Xoffset="@(new Dimension(934.6690))"
                            Yoffset="@(new Dimension(49.7655))">
                        </SimpleMarkerSymbol>
                        <SimpleLineSymbol 
                            Color="@(new MapColor(143, 209, 127))"
                            Width="@(new Dimension(496.7636))"
                            Style="@(SimpleLineSymbolStyle.ShortDashDot)"
                            Cap="@(Cap.Butt)"
                            Join="@(Join.Round)"
                            Marker="@(new LineSymbolMarker(new MapColor(178, 67, 229),
                                LinePlacement.Begin,
                                LineSymbolMarkerStyle.Cross))"
                            MiterLimit="@(286.4892)">
                        </SimpleLineSymbol>
                    </GeoRSSLayer>
                </Map>
            </MapView>);
        await WaitForMapToRender();
        Assert.IsNotNull(geoRSSLayer!);
        await AssertJavaScript("dispatchEvent", args: [geoRSSLayer!.Id, "refresh"]);
        int tries = 100;
        while (tries > 0 &&
            (refreshResult is null))
        {
            await Task.Delay(100);
            tries--;
        }
        Assert.IsInstanceOfType<RefreshEvent>(refreshResult);
        await AssertJavaScript("assertLayerExists", args: "geo-rss");
        await geoRSSLayer.Refresh();
        ListMode testListMode = ListMode.Hide;
        await geoRSSLayer.SetListMode(testListMode);
        var listMode = await geoRSSLayer.GetListMode();
        Assert.AreEqual(testListMode, listMode);
        BlendMode testBlendMode = BlendMode.Lighten;
        await geoRSSLayer.SetBlendMode(testBlendMode);
        var blendMode = await geoRSSLayer.GetBlendMode();
        Assert.AreEqual(testBlendMode, blendMode);
        Extent testFullExtent = new Extent(13.7438,
                    -34.5669,
                    14.3221,
                    22.2804,
                    724.1945,
                    668.4304,
                    53.4398,
                    265.1377,
                new SpatialReference(7,
                        "sed",
                        "et",
                        "fugit"),
                    true,
                    true);
        await geoRSSLayer.SetFullExtent(testFullExtent);
        var fullExtent = await geoRSSLayer.GetFullExtent();
        Assert.AreEqual(testFullExtent, fullExtent);
        SimpleLineSymbol testLineSymbol = new SimpleLineSymbol(new MapColor(232, 189, 201),
                    new Dimension(584.8927),
                SimpleLineSymbolStyle.LongDashDotDot,
                Cap.Butt,
                Join.Round,
                new LineSymbolMarker(new MapColor(227, 223, 47),
                    LinePlacement.BeginEnd,
                    LineSymbolMarkerStyle.Cross),
                    327.8986);
        await geoRSSLayer.SetLineSymbol(testLineSymbol);
        var lineSymbol = await geoRSSLayer.GetLineSymbol();
        Assert.AreEqual(testLineSymbol, lineSymbol);
        MarkerSymbol testPointSymbol = new SimpleMarkerSymbol(new Outline(new MapColor(65, 82, 235),
                    new Dimension(957.9926),
                    SimpleLineSymbolStyle.ShortDash,
                    Cap.Round,
                    Join.Miter,
                    new LineSymbolMarker(new MapColor(122, 244, 132),
                        LinePlacement.End,
                        LineSymbolMarkerStyle.Diamond),
                    346.6193),
                new MapColor(119, 12, 159),
                    new Dimension(257.2647),
                SimpleMarkerSymbolStyle.Square,
                    690.5429,
                    new Dimension(811.8459),
                    new Dimension(803.2894),
                    "iure");
        await geoRSSLayer.SetPointSymbol(testPointSymbol);
        var pointSymbol = await geoRSSLayer.GetPointSymbol();
        Assert.AreEqual(testPointSymbol, pointSymbol);
        SimpleFillSymbol testPolygonSymbol = new SimpleFillSymbol(new Outline(new MapColor(63, 9, 69),
                    new Dimension(436.5195),
                    SimpleLineSymbolStyle.DashDot,
                    Cap.Butt,
                    Join.Round,
                    new LineSymbolMarker(new MapColor(252, 210, 74),
                        LinePlacement.End,
                        LineSymbolMarkerStyle.Square),
                    238.6709),
                new MapColor(44, 162, 58),
                SimpleFillSymbolStyle.DiagonalCross);
        await geoRSSLayer.SetPolygonSymbol(testPolygonSymbol);
        var polygonSymbol = await geoRSSLayer.GetPolygonSymbol();
        Assert.AreEqual(testPolygonSymbol, polygonSymbol);
        TimeExtent testVisibilityTimeExtent = new TimeExtent(new DateTime(2007, 4, 11, 10, 11, 10),
                    new DateTime(2020, 5, 12, 2, 53, 21));
        await geoRSSLayer.SetVisibilityTimeExtent(testVisibilityTimeExtent);
        var visibilityTimeExtent = await geoRSSLayer.GetVisibilityTimeExtent();
        Assert.AreEqual(testVisibilityTimeExtent, visibilityTimeExtent);
    }
}
