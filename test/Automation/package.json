{
  "name": "geoblazor-automation-tests",
  "version": "1.0.0",
  "description": "Automated browser test runner for GeoBlazor",
  "main": "runTests.js",
  "scripts": {
    "test": "node runTests.js",
    "test:build": "docker compose build",
    "test:up": "docker compose up -d",
    "test:down": "docker compose down",
    "test:logs": "docker compose -f docker-compose-core.yml -f docker-compose-pro.yml logs -f"
  },
  "dependencies": {
    "playwright": "^1.49.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}